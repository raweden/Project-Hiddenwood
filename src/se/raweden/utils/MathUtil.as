package se.raweden.utils{		/**	 * The <code>MathUtil</code> class contains utility method extended mathematical carculations.	 *	 * Copyright 2011, Raweden. All Rights Reserved.	 *	 * @author Raweden	 */	public class MathUtil{				/**		 * Converts A degree value to radian.		 * 		 * @param deg The degress to carculate the radian for.		 * @return The radian value for the degress.		 */		public static function rad(deg:Number):Number{			return deg*Math.PI/180;		}				/**		 * Converts A radian value to degress.		 * 		 * @param deg The radian to carculate the degress for.		 * @return The degress for the radian value.		 */		public static function deg(rad:Number):Number{			return rad*180/Math.PI;		}			}}