package se.raweden.ui.view{	import flash.display.DisplayObjectContainer;	import flash.geom.Rectangle;	import flash.utils.getQualifiedClassName;		/**	 * 	 */	public class SpringBoardViewCell extends UIView{				private var _identifier:String;		// related views.		private var _imageView:UIImageView;		private var _labelView:UILabel;		//private var _badgeView:UIView;				public function SpringBoardViewCell(identifier:String){			super();			_identifier = identifier ? identifier : getQualifiedClassName(this);			resize(124,96);		}				//------------------------------------		// Reusing Cell.		//------------------------------------				/**		 * 		 */		public function get identifier():String{			return _identifier;		}				/**		 * 		 */		public function prepareForReuse():void{			if(_labelView){				_labelView.text = "";			}			if(_imageView){				_imageView.image = null;			}		}		//------------------------------------		// Getting Related Views.		//------------------------------------				/**		 * 		 */		public function get imageView():UIImageView{			if(!_imageView){				_imageView = new UIImageView(this);				_imageView.resize(72,72);				this.needsLayout();			}			return _imageView;		}				/**		 * 		 */		public function get labelView():UILabel{			if(!_labelView){				_labelView = new UILabel(this);				_labelView.align = "center";				_labelView.size = 16;				_labelView.width = this.width;				this.needsLayout();			}			return _labelView;		}						//------------------------------------		// Updating Content Displyed.		//------------------------------------				/**		 * @inheritDoc		 */		override protected function draw(rect:Rectangle):void{		}				/**		 * @inheritDoc		 */		override protected function layout(rect:Rectangle):void{			if(_imageView){				_imageView.x = Math.round((rect.width-_imageView.width)*0.5);				}			if(_labelView){				_labelView.width = rect.width;				//_labelView.x = Math.round((rect.width-_labelView.width)*0.5);					_labelView.y = Math.round(rect.height-_labelView.height);				}		}			}}